<Page x:Class="SpriteGenerator.Pages.Constructor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpriteGenerator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Constructor">

    <Grid>

        

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <TextBox 
                BorderThickness="0"
                Text="SpriteName"
                Name="SpriteName"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="Transparent"
                Foreground="White"
                MinWidth="200"
                TextAlignment="Center"
                FontSize="30"
                FontWeight="Bold"/>


        <!-- Head Left -->
        <Button Grid.Row="1" 
                Cursor="Hand"
                Grid.Column="0" 
                Content="3"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                HorizontalContentAlignment="Center"
                FontSize="50"
                FontFamily="Marlett"
                Click="PrevHead"
                Style="{DynamicResource ButtonStyle}"/>
        <!-- Body Left -->
        <Button Grid.Row="2" 
                Grid.Column="0" 
                Content="3"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                FontSize="50"
                FontFamily="Marlett" Click="PrevBody"
                Style="{DynamicResource ButtonStyle}"/>

        <!-- Legs Left -->
        <Button Grid.Row="3" 
                Grid.Column="0" 
                Content="3"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                FontSize="50"
                FontFamily="Marlett"
                Click="PrevLegs"
                Style="{DynamicResource ButtonStyle}"/>


        <!-- Head Right -->
        <Button Grid.Row="1" 
                Grid.Column="3" 
                Content="4"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="50"
                FontFamily="Marlett" 
                Click="NextHead"
                Style="{DynamicResource ButtonStyle}"/>
        <!-- Body Right -->
        <Button Grid.Row="2" 
                Grid.Column="3" 
                Content="4"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="50"
                FontFamily="Marlett"
                Click="NextBody"
                Style="{DynamicResource ButtonStyle}"/>
        <!-- Legs Right -->
        <Button Grid.Row="3" 
                Grid.Column="3" 
                Content="4"
                VerticalContentAlignment="Center"
                Cursor="Hand"
                Background="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="50"
                FontFamily="Marlett"
                Click="NextLegs"
                Style="{DynamicResource ButtonStyle}"/>



        <Image Grid.Column="1" 
               Grid.ColumnSpan="2"
               Grid.Row="1" 
               Grid.RowSpan="3"
               Name="Char"
               RenderOptions.BitmapScalingMode="NearestNeighbor"/>

        <Button Grid.Row="4" 
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="Сохранить спрайт"
                Margin="0 0 10 0"
                Cursor="Hand"
                BorderThickness="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="28"
                FontWeight="Bold"
                Click="SaveSprite"
                        Style="{DynamicResource ButtonStyle}"/>

        <Button Grid.Row="4" 
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Margin="10 0 0 0"
                Cursor="Hand"
                BorderThickness="0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="28"
                FontWeight="Bold"
                Click="ExportSprite"
                        Style="{DynamicResource ButtonStyle}">
            <TextBlock Text="Экспортировать спрайт" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"/>
        </Button>



    </Grid>
</Page>
