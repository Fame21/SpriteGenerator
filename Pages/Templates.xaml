<Page x:Class="SpriteGenerator.Pages.Templates"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpriteGenerator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Templates">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal" 
                    Margin="10,20">
            <ComboBox Width="350" Name="Head_ComboBox"  />
            <Button Width="200" Margin="10,0,10,0" Name="DeleteHead"  Content="Delete Selected" Click="DeleteHead_Click" />
            <Button Width="200" Name="UploadHead" Content="Upload File" Click="UploadHead_Click" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal" 
                    Margin="10,20">
            <ComboBox Width="350" Name="Body_ComboBox"  />
            <Button Width="200" Margin="10,0,10,0" Name="DeleteBody" Content="Delete Selected" Click="DeleteBody_Click" />
            <Button Width="200" Name="UploadBody" Content="Upload File" Click="UploadBody_Click" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal" 
                    Margin="10,20">
            <ComboBox Width="350" Name="Legs_ComboBox"  />
            <Button Width="200" Margin="10,0,10,0" Name="DeleteLegs" Content="Delete Selected" Click="DeleteLegs_Click" />
            <Button Width="200" Name="UploadLegs" Content="Upload File" Click="UploadLegs_Click" />
        </StackPanel>
        <StackPanel Grid.Row="3" 
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal" 
                    Margin="10,20">
            <Button Width="200" Name="Apply" Content="Apply Selected" Click="Apply_Click" />
        </StackPanel>
    </Grid>
</Page>
